<project name="Baba is You (Florent COLLIN et Valentin ANTOINE)">
	<target name="build">
		<mkdir dir="build"/>
		<javac srcdir="src" destdir="build" encoding="Latin1" includeantruntime="false">
	        <classpath>
	               <fileset dir="lib">
	                  <include name="**/*.jar" />
	               </fileset>
	         </classpath>
		</javac>
		<copy todir="build/gui">
			<fileset dir="src/gui" includes="*.fxml"/>
		</copy>
	</target>
	
	<target name="run" depends="build">
		<java classname="gui.BabaIsYouApp" fork="true" classpath="build">
	        <classpath>
	               <fileset dir="lib">
	                  <include name="**/*.jar" />
	               </fileset>
	         </classpath>
		</java>
	</target>
	
	<target name="clean">
		<delete dir="build"/>
		<delete dir="bin"/>
	</target>
	<target name = "clean_all" depends="clean,delete_save,delete_customs_lvls"/>
	<target name="delete_save">
		<delete dir="levels/saves"/>
		<mkdir dir="levels/saves"/>
	</target>
	<target name="delete_customs_lvls">
		<delete dir="levels/editor"/>
		<mkdir dir="levels/editor"/>
	</target>
</project>

