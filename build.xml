<project name="Baba is You (Florent COLLIN et Valentin ANTOINE)">
	<target name="build">
		<mkdir dir="build"/>
		<javac srcdir="src" destdir="build" encoding="Latin1" includeantruntime="false">
	        <classpath>
	               <fileset dir="lib">
	                  <include name="**/*.jar" />
	               </fileset>
	         </classpath>
		</javac>
		<copy todir="build/ressources">
			<fileset dir="ressources" includes="*.png"/>
		</copy>
		<copy todir="build/gui">
			<fileset dir="src/gui" includes="*.fxml"/>
		</copy>
	</target>
	
	<target name="run" depends="build">
		<java classname="gui.BabaIsYouApp" fork="true" classpath="build">
	        <classpath>
	               <fileset dir="lib">
	                  <include name="**/*.jar" />
	               </fileset>
	         </classpath>
		</java>
	</target>
	
	<target name="clean">
		<delete dir="build"/>
		<delete dir="bin"/>
	</target>
	<target name="delete_save">
		<delete dir="levels/saves"/>
		<mkdir dir="levels/saves"/>
	</target>
</project>

