<project name="Baba is You (Florent COLLIN et Valentin ANTOINE)">
	<target name="build">
		<mkdir dir="build"/>
		<javac srcdir="src" destdir="build">
		    <classpath>
		        <pathelement path="lib/json-simple-1.1:lib/junit-4.12.jar"/>
		    </classpath>
		</javac>
		<copy todir="build/ressources">
		<fileset dir="ressources" includes="*.png"/>
		</copy>
	</target>
	<target name="clean">
		<delete dir="build"/>
		<delete dir="bin"/>
	</target>

	<target name="run" depends="build">
		<java classname="gui.BabaIsYouApp" fork="true" classpath="build"/>
	</target>	 
</project>

